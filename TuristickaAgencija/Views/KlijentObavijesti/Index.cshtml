@model List<TuristickaAgencija.ViewModel.ObavijestiPrikaziVM>


@{
    Layout = "_LayoutUser";
}


@if (!Model.Any())
{
    <div class="alert alert-info clearfix">
        <span>Nema obavijesti za prikaz.</span>

    </div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Naziv</th>
                <th>Sadrzaj</th>
                <th>Datum</th>
                <th>Slika</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
            <tr>
                <td>@x.Naziv</td>
                <td>@x.Sadrzaj</td>
                <td>@x.Datum</td>
                <td>@x.Slika</td>
            </tr>
            }

        </tbody>

    </table>


}
