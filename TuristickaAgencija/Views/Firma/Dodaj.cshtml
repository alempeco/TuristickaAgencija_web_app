@model TuristickaAgencija.ViewModel.FirmaUrediDodajVM
@{
    if (Model.Id == 0)
    {
        ViewData["Title"] = "Dodavanje firmi";
    }
    else
    {
        ViewData["Title"] = "Uređivanje firmi";
    }

}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}

<h3>@ViewData["Title"]</h3>
<hr />
<form asp-controller="Firma" asp-action="Snimi">
    <input asp-for="Id" type="hidden" />

    <div class="form-group">
        <label asp-for="Naziv">Naziv</label>
        <input asp-for="Naziv" type="text" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="GradID">Grad</label>
        <select asp-for="GradID" class="form-control" asp-items="@Model.listaGradova">
            <option>Odaberite grad</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Adresa">Adresa</label>
        <input asp-for="Adresa" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BrojZiroracuna">Broj žiroračuna</label>
        <input asp-for="BrojZiroracuna" type="text" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Spremi</button>
</form>
